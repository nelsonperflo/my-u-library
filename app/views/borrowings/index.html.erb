<% provide(:title, 'Borrowings') %>

<% content_for :page_header do %>
  <h1><%= yield(:title) %></h1>
<% end %>

<% if current_user.librarian? %>
  <p>
    <%= link_to "New borrowing", new_borrowing_path, class: "btn btn-primary" %>
  </p>
<% end %>

<% if @borrowings.size > 0 %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <% if current_user.librarian? %>
          <th>ID</th>
          <th>Student</th>
        <% end %>
        <th>Book</th>
        <th>Borrowed date</th>
        <th>Return date</th>
      </tr>
    </thead>
    <tbody>
      <%= render @borrowings %>
    </tbody>
  </table>
  <%= will_paginate %>
<% else %>
  <h4>There are no borrowings.</h4>
<% end %>