<% provide(:title, "Role: #{@role}") %>

<% content_for :page_header do %>
  <h1><%= yield(:title) %></h1>
<% end %>

<dl class="row">
  <dt class="col-sm-2">Name</dt>
  <dd class="col-sm-10"><%= @role %></dd>
</dl>

<%= link_to "Edit role", edit_role_path(@role), class: "btn btn-secondary" %>
<%= link_to "Go to roles page", roles_path, class: "btn btn-link" %>
