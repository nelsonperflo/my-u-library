<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= form_with model: @role, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class='form-group required'>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control', required: false, autofocus: true %>
        <small id="name_help" class="form-text text-black-50">Enter the rol name.</small>
      </div>
      <%= f.submit nil, class: "btn btn-primary", data: { disable_with: "Processing..." } %>
      <%= link_to 'Cancel', roles_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>