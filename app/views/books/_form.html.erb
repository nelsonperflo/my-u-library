<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= form_with model: @book, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class='form-group required'>
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control', required: true, autofocus: true %>
        <small id="title_help" class="form-text text-black-50">Enter the book's title.</small>
      </div>
      <div class='form-group required'>
        <%= f.label :author, class: 'control-label' %>
        <%= f.text_field :author, class: 'form-control', required: true %>
        <small id="author_help" class="form-text text-black-50">Enter the book's author.</small>
      </div>
      <div class='form-group required'>
        <%= f.label :published_year, class: 'control-label' %>
        <%= f.number_field :published_year, class: 'form-control', required: true %>
        <small id="published_year_help" class="form-text text-black-50">Enter the book's published year.</small>
      </div>
      <div class='form-group required'>
        <%= f.label :genre, class: 'control-label' %>
        <%= f.text_field :genre, class: 'form-control', required: true %>
        <small id="genre_help" class="form-text text-black-50">Enter the book's genre.</small>
      </div>
      <%= f.submit nil, class: "btn btn-primary", data: { disable_with: "Processing..." } %>
      <%= link_to 'Cancel', books_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>